---
import Tabs from "./Tabs.astro";
const content = [
  { manager: "NPM", command: "$ npm create astro@latest" },
  { manager: "PNPM", command: "$ pnpm create astro@latest" },
  { manager: "YARN", command: "$ yarn create astro" },
];
